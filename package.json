{
  "name": "securevote-aadhaar-blockchain-voting",
  "version": "1.0.0",
  "description": "SecureVote: Aadhaar-Verified Blockchain Voting System - A decentralized e-voting platform with Aadhaar authentication and OTP verification",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "build": "cd client && npm run build",
    "test": "jest",
    "compile-contracts": "cd blockchain && npx hardhat compile",
    "deploy-contracts": "cd blockchain && npx hardhat run scripts/deploy.js --network localhost"
  },
  "keywords": [
    "blockchain",
    "voting",
    "aadhaar",
    "authentication",
    "ethereum",
    "smart-contracts",
    "decentralized",
    "otp-verification"
  ],
  "author": "SecureVote Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "web3": "^4.0.3",
    "ethers": "^6.7.0",
    "axios": "^1.5.0",
    "crypto": "^1.0.1",
    "nodemailer": "^6.9.4",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "@types/node": "^20.5.0"
  }
}
